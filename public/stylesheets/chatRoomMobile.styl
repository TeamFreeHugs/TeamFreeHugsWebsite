#mainChat
  display block
  height calc(100vh - 100px)
  position fixed
  top 0
  left 0
  width 100vw

#inputBar
  display block
  height 100px
  position fixed
  bottom 0
  left 0
  width 100vw
  background-color #72A0C1

#messageInput
  width calc(100vw - 150px)
  max-width calc(100vw - 130px)
  height 80px
  max-height 80px
  min-height: 80px
  position absolute
  top 50%
  transform translate(0%, -50%)

#buttonArea
  position absolute
  right 100px
  display block
  width 50px
  height 100px

#buttonArea > *
  margin-top 10px