doctype html
html
    head(profile='http://www.w3.org/2005/10/profile')
        if typeof title !== 'undefined'
            title= title
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='shortcut icon', type='image/x-icon', href='/favicon.ico')
        link(rel='apple-touch-icon', type='image/png', href='/favicon.png')
        script(src='/javascript/jQuery.min.js')
        script(src='/javascript/main.js')
        script(src='/javascript/jQuery.hotkeys.js')
        meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0', name='viewport')
        style#ui-loader-remove.
            .ui-loader {
                display: none
            }
        block head
body
    div#header
        div#header-content
            h1
                a#home(href="/") Team Free Hugs
        div#dropdown
            div.dropdownBar
            div.dropdownBar
            div.dropdownBar
            div.dropdownBar
    div#sidebar-left(data-showing='false')
    div#content
        block content

    div#footer
        div#links-container
            h4 Links
            div#links
                a(href="/") Home
        div
            h5(style="display: inline-block" title="Totally copyrighted") Design copyrighted by Eyeballcode 2015

